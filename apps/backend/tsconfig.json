    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": "src",
        "lib": ["es2020"],
        "target": "es2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "paths": {
            "@/*": ["*"]
        }
    },
    "ts-node": {
        "transpileOnly": true,
        "require": ["tsconfig-paths/register"]
    }
}
